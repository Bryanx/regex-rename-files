<idea-plugin>
    <id>nl.bryanderidder.regexrenamefiles</id>
    <name>Regex Rename Files</name>
    <vendor>bryanderidder</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    
    <actions>
        <action id="nl.bryanderidder.regexrenamefiles.ReplaceFileNamesAction"
                class="nl.bryanderidder.regexrenamefiles.ReplaceFileNamesAction"
                text="Replace Text in File Names"
                description="Replaces the text in all file names with possible regex.">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.bryanx.regexrenamefiles.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.bryanx.regexrenamefiles.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.bryanx.regexrenamefiles.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
